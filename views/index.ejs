        .owl-carousel-item {
            height: 600px !important;
            position: relative;
            overflow: hidden;
        }
        
        .owl-carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Maintains aspect ratio while filling container */
