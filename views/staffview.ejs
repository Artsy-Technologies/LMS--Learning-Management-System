<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Grad.LMS - View Content</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #06BBCC;
            --primary-hover: #0597a6;
            --text-dark: #192b3c;
            --text-muted: #6c757d;
            --border-light: #e9ecef;
            --shadow-light: 0 0 15px rgba(0,0,0,0.1);
            --shadow-hover: 0 5px 20px rgba(0,0,0,0.15);
            --book-gradient: linear-gradient(135deg, #3b4368 0%, #9479ae 100%);
        }

        body {
            font-family: 'Heebo', sans-serif;
            background-color: #f8f9fa;
        }

        /* Content Type Toggle */
        .content-toggle {
            background: white;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-light);
            text-align: center;
        }

        .toggle-buttons {
            display: inline-flex;
            background: #f8f9fa;
            border-radius: 25px;
            padding: 5px;
            margin-bottom: 15px;
        }

        .toggle-btn {
            padding: 12px 30px;
            border: none;
            background: transparent;
            border-radius: 20px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            color: var(--text-muted);
        }

        .toggle-btn.active {
            background: var(--primary-color);
            color: white;
            box-shadow: 0 2px 10px rgba(6,187,204,0.3);
        }

        .course-item {
            margin-bottom: 30px;
            transition: all 0.3s ease;
            border: none;
            box-shadow: var(--shadow-light);
            border-radius: 15px;
            overflow: hidden;
            background: white;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .course-item:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

        /* Video Styles */
        .video-preview {
            position: relative;
            height: 220px;
            overflow: hidden;
            background: linear-gradient(135deg, var(--primary-color), #5d7c9e);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .video-preview video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}
.logo-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
}
@media (max-width: 768px) {
    .logo-img {
        width: 32px;
        height: 32px;
    }
    
    .navbar-brand h2 {
        font-size: 1.5rem;
    }
}

@media (max-width: 576px) {
    .logo-img {
        width: 28px;
        height: 28px;
    }
    
    .navbar-brand h2 {
        font-size: 1.3rem;
    }
}


        .video-thumbnail {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(6,187,204,0.8), rgba(85, 95, 107, 0.8));
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            color: white;
        }

        .video-thumbnail i.fa-play-circle {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        /* Book Styles */
        .book-preview {
            position: relative;
            height: 220px;
            overflow: hidden;
            background: var(--book-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .book-thumbnail {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--book-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            color: white;
        }

        .book-thumbnail i.fa-book {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .book-thumbnail h6 {
            font-size: 1.1rem;
            font-weight: 600;
            text-align: center;
            margin: 0;
            text-shadow: 0 2px 4px rgba(95, 73, 73, 0.3);
        }

        .type-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 2;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .type-badge.notebook {
            background: rgba(255, 193, 7, 0.95);
            color: #856404;
        }

        .type-badge.textbook {
            background: rgba(40, 167, 69, 0.95);
            color: white;
        }

        .date-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(255, 255, 255, 0.95);
            color: var(--text-muted);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            z-index: 2;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .btn-watch, .btn-read {
            border-radius: 25px;
            z-index: 2;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 8px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-watch {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-watch:hover {
            background-color: var(--primary-hover);
            border-color: var(--primary-hover);
            transform: translateX(-50%) translateY(-2px);
        }

        .btn-read {
    background-color: #6f42c1;
    border-color: #6f42c1;
    border-radius: 25px;
    z-index: 3; /* Increase z-index */
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 20px;
    font-weight: 600;
    transition: all 0.3s ease;
}

        .btn-read:hover {
            background-color: #5a2d91;
            border-color: #5a2d91;
            transform: translateX(-50%) translateY(-2px);
        }

        .nav-buttons .btn {
            margin: 0 0.5rem;
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .nav-buttons .btn.active {
            background-color: white;
            color: var(--primary-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .nav-buttons .btn:not(.active) {
            background-color: transparent;
            color: white;
            border: 2px solid white;
        }

        .nav-buttons .btn:not(.active):hover {
            background-color: white;
            color: var(--primary-color);
        }

        .course-content {
            padding: 25px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .course-title {
            color: var(--text-dark);
            margin-bottom: 1rem;
            font-weight: 700;
            font-size: 1.25rem;
            line-height: 1.4;
        }

        .course-title i {
            color: var(--primary-color);
            margin-right: 8px;
        }

        .course-title i.fa-book {
            color: #6f42c1;
        }

        .stats-badge {
            display: inline-block;
            padding: 6px 14px;
            background: rgba(6,187,204,0.1);
            color: var(--primary-color);
            border-radius: 20px;
            margin-right: 10px;
            margin-bottom: 8px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .stats-badge.book-badge {
            background: rgba(111, 66, 193, 0.1);
            color: #6f42c1;
        }

        .course-description {
            color: var(--text-muted);
            line-height: 1.6;
            margin-top: auto;
            font-size: 0.95rem;
        }
.btn-read {
    background-color: #6f42c1;
    border-color: #6f42c1;
    border-radius: 25px;
    z-index: 3; /* Increase z-index */
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 20px;
    font-weight: 600;
    transition: all 0.3s ease;
}

