    .btn-read {
        z-index: 4; /* Higher z-index on mobile */
        bottom: 15px;
        padding: 6px 16px;
        font-size: 0.85rem;
    }
    
    .type-badge, .date-badge {
        z-index: 3; /* Ensure badges are above background but below button */
