<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
       <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <img src="/img/lms logo.png" alt="Grad.LMS Logo" class="logo-img me-1">
        <h2 class="m-0 text-primary">Grad.LMS</h2>
    </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">

            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Header Section -->
    <div class="container-fluid page-header py-5 mb-5">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white mb-4" style="font-weight: 700;">View Content</h1>
                    <div class="nav-buttons d-flex justify-content-center flex-wrap mb-4">
                        <a href="/staff/update" class="btn">
                            <i class="fas fa-edit me-2"></i>Update
                        </a>
                        <a href="/staffupload" class="btn">
                            <i class="fas fa-upload me-2"></i>Upload
                        </a>
                        <a href="/staff/view" class="btn active">
                            <i class="fas fa-eye me-2"></i>View
                        </a>
                    </div>
                    <p class="text-white fs-5 mt-3 mb-0">Browse Your Educational Content</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Type Toggle -->
    <div class="container">
        <div class="content-toggle">
            <div class="toggle-buttons">
                <button class="toggle-btn active" data-type="videos" onclick="switchContentType('videos')">
                    <i class="fas fa-video me-2"></i>Videos
                </button>
                <button class="toggle-btn" data-type="books" onclick="switchContentType('books')">
                    <i class="fas fa-book me-2"></i>Books
                </button>
            </div>
            <p class="text-muted mb-0">Switch between videos and books to view different types of content</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="container py-5 align-items-center">
        <div class="filter-container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 mb-3 mb-md-0">
                    <div class="search-box">
                        <input type="text" class="form-control form-control-lg" id="searchInput" placeholder="Search content by name...">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 mb-3 mb-md-0">
                    <select class="form-select form-select-lg" id="sortSelect">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="name">Name (A-Z)</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-2">
                    <div class="d-flex justify-content-end">
                        <span class="content-count-badge">
                            <i class="fas fa-video" id="countIcon"></i>
                            <span id="contentCount">0</span> <span id="countLabel">Videos</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Start -->
        <div class="container-xxl category">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h1 class="mb-5" id="contentTitle">Your Videos</h1>
                </div>
                <div class="row g-4" id="contentContainer">
                    <!-- Videos Section -->
                    <% if (typeof videos !== 'undefined' && videos.length > 0) { %>
                        <% videos.forEach(function(video, index) { %>
                            <div class="col-lg-4 col-md-6 content-item video-item active" 
                                 data-name="<%= (video.title || video.videoName || '').toLowerCase() %>"
                                 data-date="<%= video.createdAt || video.uploadDate || new Date() %>"
                                 data-teacher="<%= video.teacherId && video.teacherId.sname ? video.teacherId.sname : '' %>"
                                 data-type="video">
                                <div class="course-item">
                                   <div class="video-preview">
    <% if (video.filename) { %>
        <video src="/uploads/<%= video.filename %>#t=0.5" 
               preload="metadata" 
               muted 
               playsinline 
               style="width: 100%; height: 100%; object-fit: cover; display: block;">
            Your browser does not support HTML5 video.
        </video>
        <div class="video-thumbnail" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(6,187,204,0.3); display: flex; align-items: center; justify-content: center; opacity: 0; transition: opacity 0.3s ease;">
            <i class="fas fa-play-circle" style="font-size: 4rem; color: white;"></i>
        </div>
    <% } else { %>
        <div class="video-thumbnail">
            <i class="fas fa-play-circle"></i>
            <h6>No Video Available</h6>
        </div>
    <% } %>
    
    <span class="date-badge">
        <i class="far fa-calendar-alt me-1"></i>
        <%= (video.createdAt || video.uploadDate) ? new Date(video.createdAt || video.uploadDate).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'short', 
            day: 'numeric' 
        }) : 'N/A' %>
    </span>
    
    <% if (video.filename) { %>
        <button class="btn btn-watch btn-sm" onclick="playVideo('<%= video.filename %>')">
            <i class="fas fa-play me-2"></i>Watch Now
        </button>
    <% } %>
</div>
                                    
                                    <div class="course-content">
                                        <h5 class="course-title">
                                            <i class="fas fa-play-circle"></i>
                                            <%= video.title || video.videoName || 'Untitled Video' %>
                                        </h5>
                                        
                                        <% if (video.teacherId && video.teacherId.sname) { %>
                                            <p class="text-muted small mb-2 teacher-name">
                                                <i class="fas fa-user me-1"></i>
                                                By: <strong><%= video.teacherId.sname %></strong>
                                            </p>
                                        <% } %>
                                        
                                        <div class="mb-3">
                                            <% if (video.views) { %>
                                                <span class="stats-badge">
                                                    <i class="fas fa-eye me-1"></i>
                                                    <%= video.views %> views
                                                </span>
                                            <% } %>
                                        </div>
                                        
                                        <p class="course-description">
                                            <%= video.description || video.videoDescription || 'No description available.' %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>

                    <!-- Books Section -->
                    <% if (typeof books !== 'undefined' && books.length > 0) { %>
                        <% books.forEach(function(book, index) { %>
                            <div class="col-lg-4 col-md-6 content-item book-item" 
                                 data-name="<%= (book.title || book.bookName || '').toLowerCase() %>"
                                 data-date="<%= book.createdAt || book.uploadDate || new Date() %>"
                                 data-teacher="<%= book.teacherId && book.teacherId.sname ? book.teacherId.sname : '' %>"
                                 data-type="book">
                                <div class="course-item">
                                    <div class="book-preview">
                                        <div class="book-thumbnail">
                                            <i class="fas fa-book"></i>
                                            <h6><%= book.type ? book.type.charAt(0).toUpperCase() + book.type.slice(1) : 'Book' %></h6>
                                        </div>
                                        
                                        <% if (book.type) { %>
                                            <span class="type-badge <%= book.type %>">
                                                <i class="fas fa-<%= book.type === 'notebook' ? 'sticky-note' : 'book-open' %> me-1"></i>
                                                <%= book.type.charAt(0).toUpperCase() + book.type.slice(1) %>
                                            </span>
                                        <% } %>
                                        
                                        <span class="date-badge">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            <%= (book.createdAt || book.uploadDate) ? new Date(book.createdAt || book.uploadDate).toLocaleDateString('en-US', { 
                                                year: 'numeric', 
                                                month: 'short', 
                                                day: 'numeric' 
                                            }) : 'N/A' %>
                                        </span>
                                        
                                        <% if (book.filename) { %>
                                            <button class="btn btn-read btn-sm" onclick="openBook('<%= book.filename %>')">
                                                <i class="fas fa-book-open me-2"></i>Read Now
                                            </button>
                                        <% } %>
                                    </div>
                                    
                                    <div class="course-content">
                                        <h5 class="course-title">
                                            <i class="fas fa-book"></i>
                                            <%= book.title  || 'Untitled Book' %>
                                        </h5>
                                        
                                        <% if (book.teacherId && book.teacherId.sname) { %>
                                            <p class="text-muted small mb-2 teacher-name">
                                                <i class="fas fa-user me-1"></i>
                                                By: <strong><%= book.teacherId.sname %></strong>
                                            </p>
                                        <% } %>
                                        
                                        <div class="mb-3">
                                            <% if (book.subject) { %>
                                                <span class="stats-badge book-badge">
                                                    <i class="fas fa-tag me-1"></i>
                                                    <%= book.subject %>
                                                </span>
                                            <% } %>
                                            <% if (book.author) { %>
                                                <span class="stats-badge book-badge">
