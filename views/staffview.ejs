    <script>
let currentContentType = 'videos';

document.addEventListener('DOMContentLoaded', function() {
    // Set default sort to newest first
    document.getElementById('sortSelect').value = 'newest';
    switchContentType('videos'); // Initialize with videos view
    
    loadVideoMetadata();
    
    // Setup event listeners
    document.getElementById('searchInput').addEventListener('input', filterContent);
    document.getElementById('sortSelect').addEventListener('change', sortContent);

    // Back to top functionality
    const backToTop = document.querySelector('.back-to-top');
    if (backToTop) {
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                backToTop.style.display = 'block';
            } else {
                backToTop.style.display = 'none';
            }
        });

        backToTop.addEventListener('click', function(e) {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    }
});

function switchContentType(type) {
    currentContentType = type;
    
    // Update toggle buttons
    document.querySelectorAll('.toggle-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    document.querySelector(`[data-type="${type}"]`).classList.add('active');
    
    // Show/hide content items
    document.querySelectorAll('.content-item').forEach(item => {
        if (type === 'videos' && item.classList.contains('video-item')) {
            item.classList.add('active');
            item.style.display = 'block';
        } else if (type === 'books' && item.classList.contains('book-item')) {
            item.classList.add('active');
            item.style.display = 'block';
        } else {
            item.classList.remove('active');
            item.style.display = 'none';
        }
    });
    
    // Update UI elements
    const countIcon = document.getElementById('countIcon');
    const countLabel = document.getElementById('countLabel');
    const contentTitle = document.getElementById('contentTitle');
    const searchInput = document.getElementById('searchInput');
    
    if (type === 'videos') {
        countIcon.className = 'fas fa-video';
        countLabel.textContent = 'Videos';
        contentTitle.textContent = 'Your Videos';
        searchInput.placeholder = 'Search videos by name...';
    } else {
        countIcon.className = 'fas fa-book';
        countLabel.textContent = 'Books';
        contentTitle.textContent = 'Your Books';
        searchInput.placeholder = 'Search books by name...';
    }
    
    // Clear search and apply filters
    document.getElementById('searchInput').value = '';
    sortContent();
    updateContentCount();
}

function loadVideoMetadata() {
    // Load video durations from video elements
    document.querySelectorAll('video[src]').forEach(video => {
        video.addEventListener('loadedmetadata', function() {
            const duration = Math.floor(this.duration);
            const videoCard = this.closest('.content-item');
            
            if (videoCard) {
                // Update duration placeholders
                const durationPlaceholders = videoCard.querySelectorAll('.duration-placeholder');
                durationPlaceholders.forEach(placeholder => {
                    if (duration && !isNaN(duration)) {
                        const minutes = Math.floor(duration / 60);
                        const seconds = Math.floor(duration % 60);
                        placeholder.textContent = `${minutes}:${String(seconds).padStart(2, '0')} mins`;
                    } else {
                        placeholder.textContent = 'N/A';
                    }
                });
            }
        });
    });
}

function updateContentCount() {
    const visibleItems = document.querySelectorAll('.content-item.active:not([style*="display: none"])').length;
    document.getElementById('contentCount').textContent = visibleItems;
    
    // Show/hide empty state
    let emptyState = document.getElementById('emptyState');
    const activeItems = document.querySelectorAll('.content-item.active');
    
    if (visibleItems === 0 && activeItems.length > 0) {
        emptyState.style.display = 'block';
    } else {
        emptyState.style.display = 'none';
    }
}

function filterContent() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
    const activeItems = document.querySelectorAll('.content-item.active');

    activeItems.forEach(item => {
        const name = item.dataset.name || '';
        const teacher = item.dataset.teacher || '';
        
        const matchesSearch = name.includes(searchTerm) || teacher.toLowerCase().includes(searchTerm);
        
        item.style.display = matchesSearch ? 'block' : 'none';
    });

    updateContentCount();
}

function sortContent() {
    const container = document.getElementById('contentContainer');
    const sortBy = document.getElementById('sortSelect').value;
    const activeItems = Array.from(document.querySelectorAll('.content-item.active'));

    activeItems.sort((a, b) => {
        switch(sortBy) {
            case 'newest':
                const dateA = new Date(a.dataset.date || 0);
                const dateB = new Date(b.dataset.date || 0);
                return dateB - dateA; // Newest first (descending)
            case 'oldest':
                const dateA2 = new Date(a.dataset.date || 0);
                const dateB2 = new Date(b.dataset.date || 0);
                return dateA2 - dateB2; // Oldest first (ascending)
            case 'name':
                return (a.dataset.name || '').localeCompare(b.dataset.name || '');
            case 'teacher':
                return (a.dataset.teacher || '').localeCompare(b.dataset.teacher || '');
            default:
                return 0;
        }
    });

    // Re-append sorted items to container
    activeItems.forEach(item => container.appendChild(item));
    
    updateContentCount();
}

function playVideo(filename) {
    if (filename) {
        const videoPlayer = document.getElementById('videoPlayer');
        if (videoPlayer) {
            videoPlayer.src = `/uploads/${filename}`;
            videoPlayer.load();
            new bootstrap.Modal(document.getElementById('videoModal')).show();
        }
    }
}

function openBook(filename) {
    if (filename) {
        // Open PDF in new tab/window
        window.open(`/uploads/${filename}`, '_blank');
    }
}

// Stop video when modal is closed
const videoModal = document.getElementById('videoModal');
if (videoModal) {
    videoModal.addEventListener('hidden.bs.modal', function () {
        const videoPlayer = document.getElementById('videoPlayer');
        if (videoPlayer) {
            videoPlayer.pause();
        }
    });
}
