    }
    
    .video-thumbnail i.fa-play-circle,
    .book-thumbnail i.fa-book {
        font-size: 3rem;
    }
    
    .toggle-buttons {
        flex-direction: column;
        width: 100%;
    }

    .toggle-btn {
        margin-bottom: 5px;
        width: 100%; /* Full width on mobile */
    }
