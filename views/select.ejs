    <style>
     .selectable-card {
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s, filter 0.3s;
            border: 2px solid transparent;
            filter: blur(0px);
            position: relative;
            overflow: hidden;
            height: 300px;
            border-radius: 15px;
        }

        .selectable-card.selected {
            border-color: #06BBCC;
            box-shadow: 0 0 20px rgba(6, 187, 204, 0.4);
            transform: scale(1.01);
            filter: blur(0px);
            margin-bottom: 10px;
        }

        .selectable-card.blurred {
            filter: blur(2px);
            opacity: 0.7;
        }

        .card-image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: 1;
        }

        .card-content-overlay {
            position: absolute;
            top: 50%;
            left: 2rem;
            max-width: 40%;
            width: fit-content;
            height: fit-content;
            background: rgba(248, 248, 246, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(240, 240, 238, 0.3);
            border-radius: 8px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
            display: inline-block;
            z-index: 2;
            padding: 0.8rem 1rem;
            text-align: left;
            transform: translateY(-50%);
            transition: all 0.3s ease;
        }

        .floating-role-title {
            font-size: 1.3rem;
            font-weight: 700;
            font-family: 'Nunito', sans-serif;
            color: #333;
            margin: 0 0 0.4rem 0;
            padding: 0;
            transform: translateY(0);
            transition: transform 0.3s ease;
            letter-spacing: 0.2px;
            line-height: 1.1;
            display: block;
        }

        .floating-role-description {
            font-size: 0.80rem;
            font-family: 'Heebo', sans-serif;
            font-weight: 400;
            color: #555;
            line-height: 1.25;
            letter-spacing: 0.1px;
            margin: 0;
            padding: 0;
            display: block;
        }

        .selectable-card:hover .floating-role-title {
            transform: translateY(-3px);
        }

        .selectable-card:hover .card-content-overlay {
            background: rgba(248, 248, 246, 0.98);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            transform: translateY(-50%) scale(1.05);
        }

        .form-check {
            display: none;
        }

        .admin-card {
            border: 2px solid #dc3545 !important;
            border-radius: 12px;
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.05), rgba(255, 255, 255, 0.1));
            transition: all 0.3s ease;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            height: auto;
            min-height: auto;
        }

        .admin-card:hover {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.08), rgba(255, 255, 255, 0.15));
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.2);
        }

        .admin-card.selected {
            background: rgba(220, 53, 69, 0.1);
            box-shadow: 0 0 15px rgba(220, 53, 69, 0.3);
        }

        .admin-card i {
            font-size: 1.5rem;
            animation: pulse-icon 1s infinite alternate;
        }

        @keyframes pulse-icon {
            0% {
                transform: scale(1);
            }
            100% {
                transform: scale(1.1);
            }
        }

        .admin-card span {
            font-size: 1.1rem;
            font-weight: 600;
            color: #dc3545;
        }

        /* Enhanced styling for admin section separator */
        .admin-section {
            border-top: 1px solid #dee2e6;
            padding-top: 2rem;
            margin-top: 3rem;
        }

        .admin-divider {
            position: relative;
            text-align: center;
            margin: 3rem 0 2rem 0;
            height: 20px;
        }

        .admin-divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #dee2e6;
            z-index: 1;
        }

        .admin-divider span {
            background: white;
            padding: 0 1.5rem;
            color: #6c757d;
            font-size: 0.9rem;
            font-weight: 500;
            position: relative;
            z-index: 2;
            display: inline-block;
        }

        /* Teacher card specific styling */
        .teacher-card .card-content-overlay {
            border-left: 2px solid #06BBCC;
        }

        .teacher-card .floating-role-title {
            color: #06BBCC;
        }

        /* Student card specific styling */
