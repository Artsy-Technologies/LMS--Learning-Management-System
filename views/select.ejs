    <!-- Role Selection Script -->
    <script>
        function selectRole(roleId) {
            const cards = document.querySelectorAll('.selectable-card');
            
            // Remove all selected and blurred classes
            cards.forEach(card => {
                card.classList.remove('selected', 'blurred');
            });

            // Select the clicked card
            const selectedInput = document.getElementById(roleId);
            selectedInput.checked = true;
            const selectedCard = selectedInput.closest('.selectable-card');
            selectedCard.classList.add('selected');

            // Blur all other cards
            cards.forEach(card => {
                if (!card.classList.contains('selected')) {
                    card.classList.add('blurred');
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const roleForm = document.getElementById('roleForm');
            const errorMessage = document.getElementById('errorMessage');

            roleForm.addEventListener('submit', function (event) {
                event.preventDefault(); // Always prevent the default form submission
                
                const selectedRole = document.querySelector('input[name="role"]:checked');
                if (!selectedRole) {
                    errorMessage.textContent = 'Please select a role to continue.';
                    return;
                }

                // Redirect based on role selection using GET requests
                switch(selectedRole.value) {
                    case 'login': // Student
                        window.location.href = '/login';
                        break;
                    case 'stafflogin': // Teacher
                        window.location.href = '/stafflogin';
                        break;
                    case 'adminlogin': // Admin
                        window.location.href = '/adminlogin';
                        break;
                    default:
                        errorMessage.textContent = 'Invalid role selected.';
                }
            });
        });
    </script>
