    <script>
// Enhanced upload functionality with support for both video and book uploads
document.addEventListener('DOMContentLoaded', function() {
    // Content type selection
    const contentTypeRadios = document.querySelectorAll('input[name="contentType"]');
    const videoForm = document.querySelector('.video-form');
    const bookForm = document.querySelector('.book-form');
    const headerIcon = document.getElementById('headerIcon');
    const headerTitle = document.getElementById('headerTitle');
    const headerSubtitle = document.getElementById('headerSubtitle');

    // Content type change handler
    contentTypeRadios.forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.value === 'video') {
                videoForm.classList.add('active');
                bookForm.classList.remove('active');
                headerIcon.className = 'fas fa-video';
                headerTitle.textContent = 'Upload Your Course Video';
                headerSubtitle.textContent = 'Share your knowledge with students around the world';
            } else if (this.value === 'book') {
                videoForm.classList.remove('active');
                bookForm.classList.add('active');
                headerIcon.className = 'fas fa-book';
                headerTitle.textContent = 'Upload Your Book';
                headerSubtitle.textContent = 'Share educational resources and knowledge';
            }
        });
    });

    // Initialize file upload functionality for both types
    initializeFileUpload('video', 'video/*', 500 * 1024 * 1024, 'Please select a valid video file.', 'Video file size must be less than 500MB.');
    initializeFileUpload('book', '.pdf', 100 * 1024 * 1024, 'Please select a valid PDF file.', 'PDF file size must be less than 100MB.');

    // Character counters
    setupCharacterCounter('videoDescription', 'videoCharCount');
    setupCharacterCounter('bookDescription', 'bookCharCount');
});

function initializeFileUpload(type, acceptType, maxSize, typeError, sizeError) {
    const fileUploadArea = document.getElementById(`${type}UploadArea`);
    const fileInput = document.getElementById(type);
    const filePreview = document.getElementById(`${type}Preview`);
    const fileName = document.getElementById(`${type}FileName`);
    const fileSize = document.getElementById(`${type}FileSize`);
    
    // File upload area click handler
    fileUploadArea.addEventListener('click', () => fileInput.click());
    
    // Drag and drop functionality
    fileUploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        fileUploadArea.classList.add('dragover');
    });
    
    fileUploadArea.addEventListener('dragleave', () => {
        fileUploadArea.classList.remove('dragover');
    });
    
    fileUploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        fileUploadArea.classList.remove('dragover');
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            fileInput.files = files;
            handleFileSelect(type, acceptType, maxSize, typeError, sizeError);
        }
    });
    
    // File input change handler
    fileInput.addEventListener('change', () => handleFileSelect(type, acceptType, maxSize, typeError, sizeError));
}

function handleFileSelect(type, acceptType, maxSize, typeError, sizeError) {
    const fileInput = document.getElementById(type);
    const fileUploadArea = document.getElementById(`${type}UploadArea`);
    const filePreview = document.getElementById(`${type}Preview`);
    const fileName = document.getElementById(`${type}FileName`);
    const fileSize = document.getElementById(`${type}FileSize`);
    
    const file = fileInput.files[0];
    if (file) {
        // Validate file type
        if (type === 'video') {
            if (!file.type.startsWith('video/')) {
                showMessage(typeError, 'error');
                return;
            }
        } else if (type === 'book') {
            if (file.type !== 'application/pdf') {
                showMessage(typeError, 'error');
                return;
            }
        }
        
        // Validate file size
        if (file.size > maxSize) {
            showMessage(sizeError, 'error');
            return;
        }
        
        fileName.textContent = file.name;
        fileSize.textContent = formatFileSize(file.size);
        fileUploadArea.style.display = 'none';
        filePreview.style.display = 'block';
    }
}

function setupCharacterCounter(textareaId, counterId) {
    const textarea = document.getElementById(textareaId);
    const charCount = document.getElementById(counterId);
    
    textarea.addEventListener('input', function() {
        const count = this.value.length;
        charCount.textContent = count;
        charCount.style.color = count > 450 ? '#dc3545' : 'var(--primary-color)';
    });
}

function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
}

function removeFile(type) {
    document.getElementById(type).value = '';
    document.getElementById(`${type}UploadArea`).style.display = 'block';
    document.getElementById(`${type}Preview`).style.display = 'none';
    document.getElementById(`${type}Progress`).style.display = 'none';
}

function showMessage(message, type) {
    const messageDiv = document.getElementById('successMessage');
    messageDiv.className = `upload-message ${type}`;
    messageDiv.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
        ${message}
    `;
    messageDiv.style.display = 'block';
    
    // Auto hide after 5 seconds for success messages
    if (type === 'success') {
        setTimeout(() => {
            messageDiv.style.display = 'none';
        }, 5000);
    }
}

function uploadContent(type) {
    const form = document.getElementById(`${type}Form`);
    const formData = new FormData(form);
    const button = document.getElementById(`${type}UploadBtn`);
    const progressDiv = document.getElementById(`${type}Progress`);
    const progressBar = document.getElementById(`${type}ProgressBar`);
    const progressText = document.getElementById(`${type}ProgressText`);
    
    // Validation
    if (!document.getElementById(type).files[0]) {
        showMessage(`Please select a ${type} file.`, 'error');
        return;
    }
    
    // Type-specific validation
    if (type === 'video') {
        if (!document.getElementById('videoName').value.trim()) {
            showMessage('Please enter a course title.', 'error');
            return;
        }
        
        if (!document.getElementById('videoDescription').value.trim()) {
            showMessage('Please enter a course description.', 'error');
            return;
        }
    } else if (type === 'book') {
        if (!document.getElementById('bookTitle').value.trim()) {
            showMessage('Please enter a book title.', 'error');
            return;
        }
        
        if (!document.getElementById('bookAuthor').value.trim()) {
            showMessage('Please enter the author name.', 'error');
            return;
        }
        
        if (!document.getElementById('bookSubject').value.trim()) {
            showMessage('Please enter the subject.', 'error');
            return;
        }
        
        if (!document.getElementById('bookTypeSelect').value) {
            showMessage('Please select a book type.', 'error');
            return;
        }
        
        if (!document.getElementById('bookDescription').value.trim()) {
            showMessage('Please enter a book description.', 'error');
            return;
        }
    }
    
    // Show progress and disable button
    button.disabled = true;
    button.innerHTML = `<i class="fas fa-spinner fa-spin me-2"></i>Uploading...`;
    progressDiv.style.display = 'block';
    
    // Simulate upload progress (replace with actual progress tracking)
    let progress = 0;
    const progressInterval = setInterval(() => {
        progress += Math.random() * 15;
        if (progress > 90) progress = 90;
        progressBar.style.width = progress + '%';
        progressText.textContent = Math.round(progress) + '%';
    }, 200);
    
    // Determine upload endpoint
    const uploadEndpoint = type === 'video' ? '/upload' : '/upload-book';
    
    fetch(uploadEndpoint, {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        clearInterval(progressInterval);
        progressBar.style.width = '100%';
        progressText.textContent = '100%';
        
        setTimeout(() => {
            if (data.success) {
                showMessage(`ðŸŽ‰ ${type === 'video' ? 'Course' : 'Book'} uploaded successfully! You can upload another ${type}.`, 'success');
                form.reset();
                removeFile(type);
                // Reset character counters
                document.getElementById(`${type}CharCount`).textContent = '0';
                if (type === 'book') {
                    document.getElementById('bookTypeSelect').value = '';
                }
            } else {
                showMessage(`âŒ Error uploading ${type}. ${data.message || 'Please try again.'}`, 'error');
            }
        }, 500);
    })
    .catch(error => {
        clearInterval(progressInterval);
        showMessage(`âŒ Error uploading ${type}. Please try again.`, 'error');
        console.error(`Error uploading ${type}:`, error);
    })
    .finally(() => {
        button.disabled = false;
        button.innerHTML = `<i class="fas fa-upload me-2"></i>Upload ${type === 'video' ? 'Course' : 'Book'}`;
        setTimeout(() => {
            progressDiv.style.display = 'none';
            progressBar.style.width = '0%';
        }, 1000);
    });
}
