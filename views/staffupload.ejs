    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="upload-card shadow-lg">
                    <div class="upload-header">
                        <div class="upload-icon">
                            <i class="fas fa-cloud-upload-alt" id="headerIcon"></i>
                        </div>
                        <h2 class="upload-title" id="headerTitle">Upload Your Content</h2>
                        <p class="upload-subtitle" id="headerSubtitle">Share your knowledge with students around the world</p>
                    </div>

                    <div class="upload-body">
                        <!-- Content Type Selection -->
                        <div class="content-type-selector">
                            <div class="type-option">
                                <input type="radio" id="videoType" name="contentType" value="video" class="type-radio" checked>
                                <label for="videoType" class="type-label">
                                    <i class="fas fa-video type-icon"></i>
                                    <span class="type-text">Video</span>
                                </label>
                            </div>
                            <div class="type-option">
                                <input type="radio" id="bookType" name="contentType" value="book" class="type-radio">
                                <label for="bookType" class="type-label">
                                    <i class="fas fa-book type-icon"></i>
                                    <span class="type-text">Book</span>
                                </label>
                            </div>
                        </div>

                        <!-- Video Upload Form -->
                        <form id="videoForm" class="video-form active" enctype="multipart/form-data">
                            <!-- Video Upload Section -->
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-video me-2"></i>Video File
                                </label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-area" id="videoUploadArea">
                                        <div class="file-upload-content">
                                            <i class="fas fa-cloud-upload-alt file-upload-icon"></i>
                                            <h4>Drag & drop your video here</h4>
                                            <p>or <span class="file-browse">browse files</span></p>
                                            <p class="file-info">Supports: MP4, AVI, MOV, WMV (Max: 500MB)</p>
                                        </div>
                                        <input type="file" id="video" name="video" accept="video/*" required hidden>
                                    </div>
                                    <div class="file-preview" id="videoPreview" style="display: none;">
                                        <div class="file-preview-content">
                                            <i class="fas fa-file-video file-preview-icon"></i>
                                            <div class="file-details">
                                                <span class="file-name" id="videoFileName"></span>
                                                <span class="file-size" id="videoFileSize"></span>
                                            </div>
                                            <button type="button" class="file-remove" onclick="removeFile('video')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                        <div class="upload-progress" id="videoProgress" style="display: none;">
                                            <div class="progress-bar" id="videoProgressBar"></div>
                                            <span class="progress-text" id="videoProgressText">0%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Video Details Section -->
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="videoName" class="form-label">
                                        <i class="fas fa-tag me-2"></i>Course Title
                                    </label>
                                    <input type="text" id="videoName" name="videoName" class="form-control" 
                                           placeholder="Enter an engaging title for your course" required>
                                    <div class="form-hint">Make it descriptive and engaging to attract students</div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="videoDescription" class="form-label">
                                    <i class="fas fa-align-left me-2"></i>Course Description
                                </label>
                                <textarea id="videoDescription" name="videoDescription" class="form-control" rows="4" 
                                          placeholder="Describe what students will learn from this course..." required></textarea>
                                <div class="form-hint">
                                    <span class="char-count" id="videoCharCount">0</span>/500 characters
                                </div>
                            </div>

                            <!-- Upload Button -->
                            <div class="upload-actions">
                                <button type="button" onclick="uploadContent('video')" class="btn-upload" id="videoUploadBtn">
                                    <i class="fas fa-upload me-2"></i>
                                    Upload Course
                                </button>
                            </div>
                        </form>

                        <!-- Book Upload Form -->
                        <form id="bookForm" class="book-form" enctype="multipart/form-data">
                            <!-- Book Upload Section -->
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-file-pdf me-2"></i>Book File (PDF)
                                </label>
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-area" id="bookUploadArea">
                                        <div class="file-upload-content">
                                            <i class="fas fa-cloud-upload-alt file-upload-icon"></i>
                                            <h4>Drag & drop your PDF here</h4>
                                            <p>or <span class="file-browse">browse files</span></p>
                                            <p class="file-info">Supports: PDF only (Max: 100MB)</p>
                                        </div>
                                        <input type="file" id="book" name="book" accept=".pdf" required hidden>
                                    </div>
                                    <div class="file-preview" id="bookPreview" style="display: none;">
                                        <div class="file-preview-content">
                                            <i class="fas fa-file-pdf file-preview-icon"></i>
                                            <div class="file-details">
                                                <span class="file-name" id="bookFileName"></span>
                                                <span class="file-size" id="bookFileSize"></span>
                                            </div>
                                            <button type="button" class="file-remove" onclick="removeFile('book')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                        <div class="upload-progress" id="bookProgress" style="display: none;">
                                            <div class="progress-bar" id="bookProgressBar"></div>
                                            <span class="progress-text" id="bookProgressText">0%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Book Details Section -->
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="bookTitle" class="form-label">
                                        <i class="fas fa-tag me-2"></i>Book Title
                                    </label>
                                    <input type="text" id="bookTitle" name="title" class="form-control" 
                                           placeholder="Enter the book title" required>
                                </div>
                                <div class="form-group">
                                    <label for="bookAuthor" class="form-label">
                                        <i class="fas fa-user me-2"></i>Author
                                    </label>
                                    <input type="text" id="bookAuthor" name="author" class="form-control" 
                                           placeholder="Enter the author's name" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="bookSubject" class="form-label">
                                        <i class="fas fa-graduation-cap me-2"></i>Subject
                                    </label>
                                    <input type="text" id="bookSubject" name="subject" class="form-control" 
                                           placeholder="Enter the subject (e.g., Mathematics, Physics)" required>
                                </div>
                                <div class="form-group">
                                    <label for="bookType" class="form-label">
                                        <i class="fas fa-bookmark me-2"></i>Book Type
                                    </label>
                                    <select id="bookTypeSelect" name="type" class="form-select" required>
                                        <option value="">Select book type</option>
                                        <option value="notebook">Notebook</option>
                                        <option value="textbook">Textbook</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="bookDescription" class="form-label">
                                    <i class="fas fa-align-left me-2"></i>Book Description
                                </label>
                                <textarea id="bookDescription" name="description" class="form-control" rows="4" 
                                          placeholder="Describe the book content and what readers will learn..." required></textarea>
                                <div class="form-hint">
                                    <span class="char-count" id="bookCharCount">0</span>/500 characters
                                </div>
                            </div>

                            <!-- Upload Button -->
                            <div class="upload-actions">
                                <button type="button" onclick="uploadContent('book')" class="btn-upload" id="bookUploadBtn">
                                    <i class="fas fa-upload me-2"></i>
                                    Upload Book
                                </button>
                            </div>
                        </form>

                        <!-- Success/Error Messages -->
                        <div id="successMessage" class="upload-message" style="display: none;"></div>
                    </div>
                </div>
            </div>
        </div>
