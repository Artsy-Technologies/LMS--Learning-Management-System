    <style>
        /* Define CSS custom properties */
        :root {
            --primary-color: #06BBCC;
        }

        .flash-message {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        
        .error {
            background-color: white;
            color: #FF4646;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color), #4a90e2) !important;
            min-height: 400px;
            display: flex;
            align-items: center;
            width: 100vw;
            margin: 0 !important;
            padding: 0 !important;
        }
        .navbar {
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;
}

.navbar-brand {
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;
}

.navbar-nav .nav-link {
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;
}

       .nav-buttons .btn {
    margin: 0 0.5rem;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
}

/* Add mobile responsiveness */
@media (max-width: 768px) {
    .nav-buttons .btn {
        margin: 0.25rem;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }
}

        .nav-buttons .btn.active {
            background-color: white;
            color: var(--primary-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .nav-buttons .btn:not(.active) {
            background-color: transparent;
            color: white;
            border: 2px solid white;
        }

        .nav-buttons .btn:not(.active):hover {
            background-color: white;
            color: var(--primary-color);
        }

        .upload-card {
            background: white;
            border-radius: 20px;
            border: none;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .upload-header {
            background: linear-gradient(135deg, var(--primary-color), #4a90e2);
            padding: 2.5rem 2rem;
            text-align: center;
            color: white;
        }

        .upload-icon {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            backdrop-filter: blur(10px);
        }

        .upload-icon i {
            font-size: 2.5rem;
        }

        .upload-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: white;
        }

        .upload-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin: 0;
        }

        .upload-body {
            padding: 2.5rem;
        }

        /* Content Type Selection */
        .content-type-selector {
            margin-bottom: 2rem;
            text-align: center;
        }

        .type-option {
            display: inline-block;
            margin: 0 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .type-radio {
            display: none;
        }

        .type-label {
            background: #f8f9fa;
            border: 3px solid #e9ecef;
            border-radius: 15px;
            padding: 1.5rem 2rem;
            min-width: 180px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            display: block;
        }

        .type-label:hover {
            border-color: var(--primary-color);
            background: rgba(6, 187, 204, 0.05);
        }

        .type-radio:checked + .type-label {
            border-color: var(--primary-color);
            background: rgba(6, 187, 204, 0.1);
            color: var(--primary-color);
            font-weight: 600;
        }

        .type-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .type-text {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
            font-size: 1.1rem;
            color: #2c3e50;
            margin-bottom: 0.75rem;
            display: block;
        }

        .form-label i {
            color: var(--primary-color);
        }

        .file-upload-wrapper {
            position: relative;
        }

        .file-upload-area {
            border: 3px dashed #dee2e6;
            border-radius: 15px;
            padding: 3rem 2rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #f8f9fa;
            position: relative;
            overflow: hidden;
        }

        .file-upload-area:hover {
            border-color: var(--primary-color);
            background: rgba(6, 187, 204, 0.05);
        }

        .file-upload-area.dragover {
            border-color: var(--primary-color);
            background: rgba(6, 187, 204, 0.1);
            transform: scale(1.02);
        }

        .file-upload-content h4 {
            color: #2c3e50;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .file-upload-content p {
            color: #6c757d;
            margin-bottom: 0.25rem;
        }

        .file-browse {
            color: var(--primary-color);
            font-weight: 600;
            cursor: pointer;
        }

        .file-browse:hover {
            text-decoration: underline;
        }

        .file-upload-icon {
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
            opacity: 0.7;
        }

        .file-info {
            font-size: 0.85rem;
            color: #adb5bd;
        }

        .file-preview {
            border: 2px solid var(--primary-color);
            border-radius: 15px;
            padding: 1.5rem;
            background: rgba(6, 187, 204, 0.05);
        }

        .file-preview-content {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .file-preview-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
        }

        .file-details {
            flex: 1;
        }

        .file-name {
            display: block;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.25rem;
        }

        .file-size {
            display: block;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .file-remove {
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .file-remove:hover {
            background: #c82333;
            transform: scale(1.1);
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(6, 187, 204, 0.25);
            outline: none;
        }

        .form-select {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(6, 187, 204, 0.25);
            outline: none;
        }

        .form-hint {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .char-count {
            color: var(--primary-color);
            font-weight: 600;
        }

        .upload-progress {
            margin-top: 1rem;
            background: #f8f9fa;
            border-radius: 10px;
            padding: 0.5rem;
            position: relative;
        }

        .progress-bar {
            height: 8px;
            background: linear-gradient(90deg, var(--primary-color), #4a90e2);
            border-radius: 4px;
            transition: width 0.3s ease;
            width: 0%;
        }

        .progress-text {
            position: absolute;
            right: 0.5rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 0.8rem;
            font-weight: 600;
            color: var(--primary-color);
        }

        .upload-actions {
            text-align: center;
            margin-top: 2rem;
        }

        .btn-upload {
            background: linear-gradient(135deg, var(--primary-color), #4a90e2);
            color: white;
            border: none;
            padding: 1rem 3rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(6, 187, 204, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-upload:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(6, 187, 204, 0.4);
        }

        .btn-upload:active {
            transform: translateY(0);
        }

        .btn-upload:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .upload-message {
            margin-top: 1.5rem;
            padding: 1rem;
            border-radius: 12px;
            text-align: center;
            font-weight: 500;
            animation: slideIn 0.3s ease;
        }

        .upload-message.success {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border: 2px solid rgba(40, 167, 69, 0.2);
        }

        .upload-message.error {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border: 2px solid rgba(220, 53, 69, 0.2);
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 768px) {
            .form-row {
                grid-template-columns: 1fr 1fr;
            }
        }

        .video-form, .book-form {
            display: none;
        }

        .video-form.active, .book-form.active {
            display: block;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .upload-header {
                padding: 2rem 1.5rem;
            }
            
            .upload-body {
                padding: 1.5rem;
            }
            
            .upload-title {
                font-size: 1.5rem;
            }
            
            .file-upload-area {
                padding: 2rem 1rem;
            }
            
            .btn-upload {
                padding: 0.875rem 2rem;
                font-size: 1rem;
            }

            .type-option {
                display: block;
                margin: 0.5rem 0;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

