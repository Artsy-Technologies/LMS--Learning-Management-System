    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <style>
        .flash-message {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        
        .error {
            background-color: white;
            color: #FF4646;
        }
    
        .page-header {
            background: linear-gradient(rgba(24, 29, 56, .7), rgba(24, 29, 56, .7)), url(img/staff.jpg) !important;
            background-position: center center !important;
            background-repeat: no-repeat !important;
            background-size: cover !important;
        }
    </style>
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>Grad.LMS</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="/" class="nav-item nav-link active">Home</a>
                <a href="/about" class="nav-item nav-link">About</a>
                <a href="/courses" class="nav-item nav-link">Courses</a>
                <a href="/contact" class="nav-item nav-link">Contact</a>
<a href="/select" class="nav-item nav-link">Back to Selection</a> 

    </nav>
    <!-- Navbar End -->
    <!-- Header Start -->
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Staff Login/Sign-up</h1>
                    
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->


    <!-- Login Card Start -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">Login as Staff</h2>
                        
                        <!-- Show error message if exists -->
                        <% if (messages && messages.error && messages.error.length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= messages.error[0] %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>
                        
                        <form action="/stafflogin" method="post">
                            <div class="mb-3">
                                <label for="semail" class="form-label">Email</label>
                                <input type="email" name="semail" class="form-control" id="semail" placeholder="Enter your email" required>
                            </div>
                            <div class="mb-3">
                                <label for="spassword" class="form-label">Password</label>
                                <input type="password" name="spassword" class="form-control" id="spassword" placeholder="Enter your password" required>
                            </div>

                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>

                        <div class="mt-3 text-center">
                            <p class="mb-0">Don't have an account? <a href="#staffsignup" data-bs-toggle="modal">Sign Up</a></p>
                            <p><a href="#staffforgotpassword" data-bs-toggle="modal">Forgot Password?</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Card End -->

    <!-- SignUp Modal -->
    <div class="modal fade" id="staffsignup" tabindex="-1" aria-labelledby="staffSignupLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staffSignupLabel">Sign Up as Staff</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Your Sign Up Form goes here -->
                    <form action="/staffsignup" method="post">
                        <!-- Sign Up Form Fields -->
                        <div class="mb-3">
                            <label for="staffSignupName" class="form-label">Username</label>
                            <input type="text" class="form-control" id="staffSignupName" name="sname" placeholder="Enter your username" required>
                        </div>
                        <div class="mb-3">
                            <label for="staffSignupEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="staffSignupEmail" name="semail" placeholder="Enter your email" required>
                        </div>
                        <div class="mb-3">
                            <label for="staffInstitute" class="form-label">Institute</label>
                            <input type="text" class="form-control" id="staffInstitute" name="sinstitute" placeholder="Enter your institute name" required>
                        </div>
                        <div class="mb-3">
                            <label for="staffSignupPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" name="spassword" id="staffSignupPassword" placeholder="Enter your password" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Sign Up</button>
                        <% if (messages && messages.error && typeof messages.error === 'string' && messages.error.trim().length > 0) { %>
                            <div class="flash-message error">
                                <%= messages.error %>
                            </div>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="staffforgotpassword" tabindex="-1" aria-labelledby="staffForgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staffForgotPasswordModalLabel">Staff Forgot Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Your Forgot Password Form goes here -->
                    <form action="/staffforgotpassword" method="post">
                        <!-- Forgot Password Form Fields -->
                        <div class="mb-3">
                            <label for="staffForgotEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="staffForgotEmail" name="semail" placeholder="Enter your email" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Reset Password</button>
                        <% if (messages && messages.error && typeof messages.error === 'string' && messages.error.trim().length > 0) { %>
                            <div class="flash-message error">
                                <%= messages.error %>
                            </div>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Start -->
