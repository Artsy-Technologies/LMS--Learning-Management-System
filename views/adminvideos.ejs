                            <% teachers.forEach(teacher => { %>
                                <option value="<%= teacher._id %>" <%= currentFilter.teacher === teacher._id.toString() ? 'selected' : '' %>>
                                    <%= teacher.sname %> (<%= teacher.institute || 'No Institute' %>)
                                </option>
                            <% }); %>
