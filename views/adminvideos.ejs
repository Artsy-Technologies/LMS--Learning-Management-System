        /* Cards */
        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid var(--admin-border);
            padding: 1rem 1.25rem;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.9rem;
