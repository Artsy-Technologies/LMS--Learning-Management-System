    <script>
        document.addEventListener('DOMContentLoaded', loadVideosLazily);
        // Video player modal
        function watchVideo(filename, title) {
    const videoModal = new bootstrap.Modal(document.getElementById('videoModal'));
    const videoPlayer = document.getElementById('videoPlayer');
    const videoSource = document.getElementById('videoSource');
    const modalTitle = document.getElementById('videoModalTitle');
    
    // Set video source
    videoSource.src = `/uploads/${encodeURIComponent(filename)}`;
    modalTitle.textContent = title;
    
    // Load the new source
    videoPlayer.load();
    
    // Show modal
    videoModal.show();
    
    // Optional: Auto-play when modal opens (may be blocked by browsers)
    videoModal._element.addEventListener('shown.bs.modal', () => {
        videoPlayer.play().catch(e => console.log('Auto-play prevented:', e));
    });
}
        
// Add click functionality to thumbnails
document.addEventListener('DOMContentLoaded', function() {
    loadVideosLazily();
    
    // Add click handlers to video thumbnails
    document.querySelectorAll('.video-container').forEach(container => {
        container.addEventListener('click', function() {
            const video = this.querySelector('video');
            if (video && video.src) {
                const row = this.closest('tr');
                const titleElement = row.querySelector('.fw-bold');
                const filename = video.src.split('/').pop().split('#')[0];
                const title = titleElement ? titleElement.textContent : 'Video';
                
                watchVideo(decodeURIComponent(filename), title);
            }
        });
    });
});
// Video flagging
        function flagVideo(videoId, flagStatus) {
            fetch(`/admin/videos/${videoId}/flag`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ isFlagged: flagStatus })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Reload the row to update status
                    const row = document.getElementById(`video-${videoId}`);
                    if (row) {
                        const statusBadge = row.querySelector('.status-badge');
                        if (statusBadge) {
                            statusBadge.className = flagStatus ? 
                                'status-badge flagged' : 'status-badge normal';
                                
                            statusBadge.innerHTML = flagStatus ? 
                                '<i class="fas fa-flag me-1"></i> Flagged' : 
                                '<i class="fas fa-check-circle me-1"></i> Normal';
                        }
                    }
                    showAlert(`Video ${flagStatus ? 'flagged' : 'unflagged'} successfully!`, 'success');
                } else {
                    showAlert(data.message || 'Error updating video status', 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('Error updating video status', 'danger');
            });
        }
        
        // Video deletion
        let videoToDelete = null;
        
        function deleteVideo(videoId, videoTitle) {
            videoToDelete = videoId;
            document.getElementById('deleteVideoTitle').textContent = videoTitle;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
        
        document.getElementById('confirmDelete').addEventListener('click', function() {
            if (videoToDelete) {
                fetch(`/admin/videos/${videoToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Remove the row from table
                        document.getElementById(`video-${videoToDelete}`).remove();
                        
                        // Show success message
                        showAlert('Video deleted successfully!', 'success');
                        
                        // Close modal
                        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    } else {
                        showAlert(data.message || 'Error deleting video', 'danger');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('Error deleting video', 'danger');
                });
            }
        });
     function loadVideosLazily() {
    const videoContainers = document.querySelectorAll('.video-container');
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const video = entry.target.querySelector('video[data-src]');
                if (video && !video.src) {
                    video.src = video.dataset.src;
                    video.load();
                    
                    // Set current time to 0.5 seconds for thumbnail
                    video.addEventListener('loadeddata', function() {
                        this.currentTime = 0.5;
                    });
                }
                observer.unobserve(entry.target);
            }
        });
    }, { rootMargin: '200px' });

    videoContainers.forEach(container => {
        observer.observe(container);
    });
}
 // Show alert function
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.container-fluid');
            container.insertBefore(alertDiv, container.firstChild);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
