    <style>
        /* ===== Admin Dashboard Styles ===== */
        :root {
            --admin-primary: #dc3545;
            --admin-primary-dark: #c82333;
            --admin-secondary: #1cc88a;
            --admin-light: #f8f9fc;
            --admin-dark: #5a5c69;
            --admin-gray: #858796;
            --admin-light-gray: #eaecf4;
            --admin-border: #e3e6f0;
        }
        
        body {
            background-color: #f8f9fc;
            font-family: 'Nunito', sans-serif;
            color: #333;
            overflow-x: hidden;
        }
        
        /* Navigation */
        .admin-nav {
            background: linear-gradient(135deg, var(--admin-primary) 0%, var(--admin-primary-dark) 100%);
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.2);
        }
        
        .admin-nav .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            letter-spacing: 0.5px;
        }
        
        .admin-nav .nav-link {
            padding: 0.75rem 1rem;
            border-radius: 0.35rem;
            margin: 0 0.25rem;
            transition: all 0.3s;
        }
        
        .admin-nav .nav-link:not(.active):hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .admin-nav .nav-link.active {
            background-color: var(--admin-primary);
            font-weight: 600;
        }
        
        .admin-nav .dropdown-menu {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.2);
            border-radius: 0.35rem;
            padding: 0.5rem 0;
        }
        
        .admin-nav .dropdown-item {
            padding: 0.5rem 1rem;
        }
        
        .admin-nav .dropdown-item:hover {
            background-color: var(--admin-light);
            color: var(--admin-primary);
        }
        
        /* Page Content */
        .container-fluid {
            padding: 20px;
        }
        
        /* Cards */
        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid var(--admin-border);
            padding: 1rem 1.25rem;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }
        
        /* Filter Card */
        .filter-card {
            background: #fff;
            border: 1px solid var(--admin-border);
        }
        
        /* Tables */
        .table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: var(--admin-dark);
            background-color: var(--admin-light-gray);
        }
        
        .table td {
            vertical-align: middle;
            border-top: 1px solid var(--admin-border);
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(220, 53, 69, 0.05);
        }
        
        /* User Avatar */
        .user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: bold;
        }
        
        /* Status Badges */
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.875rem;
            display: inline-block;
        }
        
        .verified {
            background-color: rgba(28, 200, 138, 0.1);
            color: var(--admin-secondary);
        }
        
        .unverified {
            background-color: rgba(220, 53, 69, 0.1);
            color: var(--admin-primary);
        }
        
        /* Pagination */
        .pagination {
            margin-top: 1rem;
        }
        
        .page-item.active .page-link {
            background-color: var(--admin-primary);
            border-color: var(--admin-primary);
        }
        
        .page-link {
            color: var(--admin-primary);
        }
        
        .page-link:hover {
            color: var(--admin-primary-dark);
        }
        
        /* Modal */
        .modal-header {
            border-bottom: 1px solid var(--admin-border);
            background-color: #fff;
        }
        
        .modal-footer {
            border-top: 1px solid var(--admin-border);
            background-color: #fff;
        }
        
        /* Page Header */
        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--admin-border);
        }
        
        .page-header h1 {
            font-weight: 700;
            color: var(--admin-dark);
            font-size: 1.8rem;
            margin: 0;
        }
        
        .page-header .btn {
            border-radius: 0.3rem;
            padding: 0.5rem 1rem;
        }
        
        /* Badges */
        .badge {
            padding: 0.5em 0.8em;
            font-weight: 600;
            border-radius: 0.3rem;
        }
        
        .badge.bg-primary {
            background-color: var(--admin-primary) !important;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .table-responsive {
                border: none;
            }
            
            .filter-card .col-md-4 {
                margin-bottom: 1rem;
            }
            
            .filter-card .d-flex {
                justify-content: flex-start !important;
            }
            
            .page-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .page-header .btn {
                margin-top: 1rem;
            }
        }
        /* Tooltip styles */
    .tooltip-inner {
        max-width: 200px;
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
    }
    
    /* Hidden row style */
    tr.hidden-row {
        opacity: 0.5;
        background-color: #f8f9fa !important;
    }
    
    /* Show hidden rows button */
    .show-hidden-btn {
        margin-bottom: 1rem;
    }
    </style>
</head>

