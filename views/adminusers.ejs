        .then(data => {
            if (data.success) {
    showAlert('User verified successfully!', 'success');
    bootstrap.Modal.getInstance(document.getElementById('verifyModal')).hide();
    
    // Refresh the page after a short delay
    setTimeout(() => {
        window.location.reload();
    }, 1000);
} else {
                showAlert(data.message || 'Error verifying user', 'danger');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Error verifying user', 'danger');
        });
    }
});
   function toggleHideUser(userId) {
    const row = document.getElementById(`user-${userId}`);
    const hideBtn = row.querySelector('.hide-btn');
    const showBtn = row.querySelector('.show-btn');
    const hiddenUsers = JSON.parse(localStorage.getItem('hiddenUsers') || '[]');
    
    if (row.classList.contains('hidden-row')) {
        // User is currently hidden, show them
        row.classList.remove('hidden-row');
        hideBtn.classList.remove('d-none');
        showBtn.classList.add('d-none');
        localStorage.setItem('hiddenUsers', JSON.stringify(hiddenUsers.filter(id => id !== userId)));
    } else {
        // User is currently visible, hide them
        row.classList.add('hidden-row');
        hideBtn.classList.add('d-none');
        showBtn.classList.remove('d-none');
        localStorage.setItem('hiddenUsers', JSON.stringify([...hiddenUsers, userId]));
    }
    
    // Update hidden count badge
    const hiddenCount = document.querySelectorAll('.hidden-row').length;
    document.querySelector('.badge.bg-secondary').textContent = hiddenCount;
}
   // Initialize with hidden rows visible by default
let hiddenRowsVisible = true;

document.getElementById('toggleHiddenBtn').addEventListener('click', function() {
    const hiddenRows = document.querySelectorAll('.hidden-row');
    
    if (hiddenRowsVisible) {
        // Hide the hidden rows
        hiddenRows.forEach(row => {
            row.style.display = 'none';
        });
        this.innerHTML = '<i class="fas fa-eye me-1"></i> Show Hidden';
    } else {
        // Show the hidden rows
        hiddenRows.forEach(row => {
            row.style.display = '';
        });
        this.innerHTML = '<i class="fas fa-eye-slash me-1"></i> Hide Hidden';
    }
    
    hiddenRowsVisible = !hiddenRowsVisible;
});

// Initialize the button state on page load
$(document).ready(function() {
    // Start with hidden rows visible (default state)
    const hiddenRows = document.querySelectorAll('.hidden-row');
    hiddenRows.forEach(row => {
        row.style.display = '';
    });
    
    // Set button to "Hide Hidden" initially
    document.getElementById('toggleHiddenBtn').innerHTML = '<i class="fas fa-eye me-1"></i> Hide Hidden';
    hiddenRowsVisible = true;
});

    // Export to PDF functionality
    document.querySelector('a[href="/admin/users/export"]').addEventListener('click', function(e) {
        e.preventDefault();
        exportToPDF();
    });

    function exportToPDF() {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();
        
        // Title
        doc.setFontSize(18);
        doc.text('Users List', 14, 15);
        doc.setFontSize(12);
        doc.text(`Generated on ${new Date().toLocaleDateString()}`, 14, 22);
        
        // Table data
        const headers = [
            ['Name', 'Email', 'Institute', 'Status', 'Registered']
        ];
        
        const rows = [];
        document.querySelectorAll('#usersTable tbody tr:not(.hidden-row)').forEach(row => {
            const cells = row.querySelectorAll('td');
            rows.push([
                cells[0].querySelector('.fw-bold')?.textContent || '',
                cells[1].textContent,
                cells[2].textContent.trim(),
                cells[3].textContent.trim(),
                cells[4].textContent.trim()
            ]);
        });
        
        // Add table
        doc.autoTable({
            head: headers,
            body: rows,
            startY: 30,
            styles: {
                fontSize: 9,
                cellPadding: 2
            },
            headStyles: {
                fillColor: [220, 53, 69],
                textColor: 255,
                fontStyle: 'bold'
            }
        });
        
        // Save the PDF
        doc.save(`users_export_${new Date().toISOString().slice(0, 10)}.pdf`);
    }
</script>
